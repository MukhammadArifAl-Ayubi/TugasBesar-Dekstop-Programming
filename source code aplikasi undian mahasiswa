    private void tampilkan() {
        int row = TabelMahasiswa.getRowCount();
        for(int a=0; a<row;a++){
            model.removeRow(0);
        }
        try {
            Connection cn = DriverManager.getConnection("jdbc:mysql://localhost/mahasiswa","root","");
            ResultSet rs = cn.createStatement().executeQuery("SELECT * FROM peserta");
            while (rs.next()){
                String data []= {rs.getString(1),rs.getString(2)};
                model.addRow(data);
            }
        } catch (SQLException ex) {
            Logger.getLogger(AplikasiUndian.class.getName()).log(Level.SEVERE, null, ex);
        }
    }
}
