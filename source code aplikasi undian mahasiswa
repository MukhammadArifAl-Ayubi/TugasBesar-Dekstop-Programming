    private void btntambahActionPerformed(java.awt.event.ActionEvent evt) {                                          
        try {
            // TODO add your handling code here:
            Connection cn = DriverManager.getConnection("jdbc:mysql://localhost/mahasiswa","root","");
            cn.createStatement().executeUpdate("Insert into peserta values"+"('"+ID.getText()+"','"+nama.getText()+"')");
            tampilkan();
            JOptionPane.showMessageDialog(null, "Data Berhasil Ditambahkan");
        } catch (SQLException ex) {
           JOptionPane.showMessageDialog(null, "Ada yang belum di isi, Silahkan lengkapi terlebih dahulu!!");
        }
    }                                         

    private void btnupdateActionPerformed(java.awt.event.ActionEvent evt) {                                          
        try {
            // TODO add your handling code here:
            Connection cn = DriverManager.getConnection("jdbc:mysql://localhost/mahasiswa","root","");
            cn.createStatement().executeUpdate("update peserta set nama ='"+nama.getText()+"' where ID ='"+ID.getText()+"'");
            tampilkan();
            JOptionPane.showMessageDialog(null, "Data Berhasil Di Ganti");
        } catch (SQLException ex) {
            Logger.getLogger(AplikasiUndian.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                         

    private void btnhapusActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try {
            // TODO add your handling code here:
            Connection cn = DriverManager.getConnection("jdbc:mysql://localhost/mahasiswa","root","");
            cn.createStatement().executeUpdate("delete from peserta where nama ='"+nama.getText()+"'");
            tampilkan();
            JOptionPane.showMessageDialog(null, "Data Berhasil Dihapus");
        } catch (SQLException ex) {
            Logger.getLogger(AplikasiUndian.class.getName()).log(Level.SEVERE, null, ex);
        }
    }                                        

    private void btnresetActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        reset();
    }                                        

    private void TabelMahasiswaMouseClicked(java.awt.event.MouseEvent evt) {                                            
        // TODO add your handling code here:
        int i = TabelMahasiswa.getSelectedRow();

        if(i>-1){
            ID.setText(model.getValueAt(i, 0).toString());
            nama.setText(model.getValueAt(i, 1).toString());
        }
    }                                           

    private void btn_mulaiActionPerformed(java.awt.event.ActionEvent evt) {                                          

        TableModel tm = TabelMahasiswa.getModel();
        int Rows = tm.getRowCount(), Col = tm.getColumnCount();
        String[] tabeldata = new String[Rows];
        for (int i = 1; i<Rows; i++)
        tabeldata [i] = (String)tm.getValueAt(i, 0);
        Random rand = new Random();
        int win = rand.nextInt(tabeldata.length);
        lbl_pemenang.setText(""+win);
             
            String nama = null ;
        
        win = Integer.parseInt(lbl_pemenang.getText());
        
        if (win == 1){
            nama = "Azmi";
        }
        else 
            if(win == 2){
                nama = "Ardian";
            }
        else 
            if(win == 3){
                nama = "Arif";
            }
        else 
            if(win == 4){
                nama = "Alan";
            }
        else 
            if(win == 5){
                nama = "Miryati";
            }
        else 
            if(win == 6){
                nama = "Budi";
            }
        else 
            if(win == 7){
                nama = "David";
            }
        else 
            if(win == 8){
                nama = "Humam";
            }
        else 
            if(win == 9){
                nama = "Zaki";
            }
        else 
            if(win == 10){
                nama = "Sukma";
            }
        else 
            if(win == 11){
                nama = "Azizul";
            }
        else 
            if(win == 12){
                nama = "Wira";
            }
        else 
            if(win == 13){
                nama = "Luqi";
            }
        else 
            if(win == 14){
                nama = "Izzudin";
            }
        else 
            if(win == 15){
                nama = "Salfa";
            }
        else 
            if(win == 16){
                nama = "Syaifullah";
            }
        else 
            if(win == 17){
                nama = "Reza";
            }
        else 
            if(win == 18){
                nama = "Shidqi";
            }
        else 
            if(win == 19){
                nama = "Rikza";
            }
        else 
            if(win == 20){
                nama = "Vani";
            }
        lbl_pemenang.setText(String.valueOf(win));
        txtpemenang.setText(""+nama);
    }                                         

